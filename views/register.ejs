<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>varietyx</title>
    <link rel="stylesheet" href="register.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Poppins&display=swap');
    </style>
</head>
<body>
    <div class="regForm-wrap">
        <div class="regForm">
            <form action="/register" method="post">
                <div class="logo">
                    <img src="img/Vector.svg">
                    <p>varietyx</p>
                </div>
                <input type="text" name="username" placeholder="Имя" autocomplete="off" class="input">
                <% if (validationErrors != undefined) { %>
                    <% validationErrors.errors.forEach(element => { %>
                        <% if (element.param == 'username') { %>
                            <p class="errors"><%= element.msg %></p>
                        <% } %>
                    <% }) %>
                <% } %>
                <input type="email" name="email" placeholder="Электронная почта" autocomplete="off" class="input">
                <% if (validationErrors != undefined) { %>
                    <% validationErrors.errors.forEach(element => { %>
                        <% if (element.param == 'email') { %>
                            <p class="errors"><%= element.msg %></p>
                        <% } %>
                    <% }) %>
                <% } %>
                <input type="password" name="password" placeholder="Пароль">
                <% if (validationErrors != undefined) { %>
                    <% validationErrors.errors.forEach(element => { %>
                        <% if (element.param == 'password') { %>
                            <p class="errors last-child"><%= element.msg %></p>
                        <% } %>
                    <% }) %>
                <% } %>
                <input type="submit" value="Зарегистрироваться" class="btn">
                <a href="/auth">Мне нужно войти</a>
            </form>
        </div>
    </div>
</body>
</html>